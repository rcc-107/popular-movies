<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.rica.popularmovies">
    <ListPreference
        android:title="@string/pref_sort_title"
        android:key="@string/pref_sort_key"
        android:defaultValue="@string/popularity"
        android:entries="@array/pref_sort_options"
        android:entryValues="@array/pref_sort_values"
        />
    <com.rica.popularmovies.LanguageEditTextPreference
        android:title="@string/pref_lang_title"
        android:key="@string/pref_lang_key"
        android:defaultValue="@string/pref_lang_defValue"
        custom:minLength="4"/>
</PreferenceScreen>